<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Show Recipe"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Name"
            android:background="@drawable/edit_text_border"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:layout_marginBottom="8dp"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Zmiana: RecyclerView dla składników -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:gravity="center"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Ingredients"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addIngredient"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="+"
            android:textSize="25dp"/>
    </LinearLayout>

    <!-- RecyclerView do wyświetlania składników -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredientRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/proteinEditText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Protein"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/fatEditText"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Fat"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/carbEditText"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Carb"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/kcalEditText"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Calories"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Save" />
</LinearLayout>
